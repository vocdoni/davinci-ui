{
  "$schema": "https://ui.shadcn.com/schema/registry.json",
  "name": "davinci-voting-app",
  "description": "DAVINCI Voting App Component Registry - A complete set of components for building decentralized voting applications",
  "url": "https://davinci-voting-registry.vercel.app",
  "author": "DAVINCI Team",
  "license": "MIT",
  "version": "1.0.0",
  "style": "new-york",
  "tailwind": {
    "config": "tailwind.config.ts",
    "css": "app/globals.css",
    "cssVariables": true,
    "prefix": ""
  },
  "aliases": {
    "components": "@/components",
    "utils": "~lib/utils"
  },
  "ui": [
    "badge",
    "button",
    "card",
    "checkbox",
    "dialog",
    "input",
    "label",
    "progress",
    "radio-group",
    "select",
    "separator",
    "table",
    "tabs",
    "textarea",
    "tooltip"
  ],
  "blocks": [
    "create-vote-form",
    "vote-display",
    "voting-modal",
    "vote-progress-tracker",
    "vote-parameters",
    "floating-header",
    "davinci-info-card"
  ],
  "themes": [
    {
      "name": "davinci-light",
      "label": "DAVINCI Light",
      "cssVars": {
        "light": {
          "background": "37 40% 97%",
          "foreground": "0 0% 0%",
          "card": "37 40% 97%",
          "card-foreground": "0 0% 0%",
          "popover": "37 40% 97%",
          "popover-foreground": "0 0% 0%",
          "primary": "27 33% 81%",
          "primary-foreground": "25 31% 18%",
          "secondary": "144 100% 93%",
          "secondary-foreground": "25 31% 18%",
          "muted": "30 25% 75%",
          "muted-foreground": "25 5% 45%",
          "accent": "240 67% 87%",
          "accent-foreground": "25 31% 18%",
          "destructive": "0 84.2% 60.2%",
          "destructive-foreground": "210 40% 98%",
          "border": "147 26% 81%",
          "input": "30 25% 75%",
          "ring": "27 33% 81%"
        }
      }
    }
  ]
}
